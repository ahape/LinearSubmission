@page
@model IndexModel
@{
    ViewData["Title"] = "Bug Form";
}

@if (@Model.IsPostBack) {
    <h3>Submission successful</h3>
    <p class="mt-5">Go to issue <a href="@(@Model.NewIssueUrl)">here</a></p>
    <p class="mt-5">Create another issue <a href="/">here</a></p>
} else {
    <form method="POST" onsubmit="event.preventDefault();return false"></form>
}
